<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="${relativePackage}.${activityClass}"

    android:background="#ff14006b">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playBtn"
        android:src="@drawable/pause"
        android:background="@android:color/transparent"
        android:layout_marginLeft="49dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/skipBtn"
        android:src="@drawable/next"
        android:layout_marginRight="63dp"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shuffleBtn"
        android:src="@drawable/shuffle"
        android:layout_marginRight="40dp"
        android:maxHeight="20dp"
        android:maxWidth="20dp"
        android:background="@android:color/transparent"
        android:layout_alignBottom="@+id/prevBtn"
        android:layout_alignRight="@+id/playBtn"
        android:layout_alignEnd="@+id/playBtn" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playlistBtn"
        android:layout_above="@+id/shuffleBtn"
        android:layout_centerHorizontal="true"
        android:src="@android:drawable/button_onoff_indicator_on" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/prevBtn"
        android:src="@drawable/prev"
        android:background="@android:color/transparent"
        android:layout_below="@+id/skipBtn"
        android:layout_alignLeft="@+id/skipBtn"
        android:layout_alignStart="@+id/skipBtn"
        android:layout_marginLeft="83dp" />
</RelativeLayout>
