<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal">
    <TextView
  	    android:id="@+id/drawer_item_text"
  	    android:layout_width="@dimen/null_size"
	    android:layout_height="fill_parent"
	    android:layout_weight="1"
        android:paddingTop="@dimen/navdrawer_item_text_padding_top"
        android:paddingBottom="@dimen/navdrawer_item_text_padding_bottom"
        android:paddingLeft="@dimen/navdrawer_item_text_padding_left"
        android:paddingRight="@dimen/null_size"
        android:paddingStart="@dimen/null_size"
        android:layout_gravity="start|center_vertical"
        android:textSize="@dimen/navdrawer_item_text_size"
        android:singleLine="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:ellipsize="marquee"
        android:textColor="@color/song_label_neon"
	    android:text="@string/file_picker_done"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/remove"
        android:src="@drawable/remove_states_neon"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter" />
</LinearLayout>