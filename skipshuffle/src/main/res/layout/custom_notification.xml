<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:padding="4dp"
    android:id="@+id/notif_all"
    android:orientation="horizontal">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="48dp"
        android:layout_height="fill_parent"
        android:gravity="center">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/imageView"
            android:src="@drawable/ic_neon_notif"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:gravity="center|center_horizontal">

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/notif_prev"
            android:src="@drawable/neon_prev_states"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:layout_marginRight="10dp" />

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/notif_shuffle"
            android:longClickable="false"
            android:src="@drawable/neon_shuffle_states"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" />

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/notif_play"
            android:src="@drawable/neon_play_states"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" />

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/notif_skip"
            android:src="@drawable/neon_next_states"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:layout_marginLeft="4dp"
            android:cropToPadding="false" />
    </LinearLayout>

</LinearLayout>
