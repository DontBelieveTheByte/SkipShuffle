<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- The main content view -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/background_neon"
        android:id="@+id/background_layout">

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/null_size"
            android:id="@+id/current_list"
            android:footerDividersEnabled="true"
            android:headerDividersEnabled="true"
            android:focusable="false"
            android:layout_weight="1"
            android:dividerHeight="@dimen/list_divider_height"
            android:fastScrollEnabled="true"
            android:smoothScrollbar="true"
            android:paddingTop="@dimen/list_padding_top"
            android:paddingLeft="@dimen/list_padding_left_right"
            android:paddingRight="@dimen/list_padding_left_right"
            android:divider="@color/list_divider_neon"
            android:drawSelectorOnTop="false" />

    </LinearLayout>

    <!-- The navigation drawer -->
    <ListView
        android:id="@+id/left_drawer1"
        android:layout_width="@dimen/large_port_nav_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@color/list_divider_neon"
        android:dividerHeight="@dimen/large_port_nav_drawer_divider_height"
        android:background="@color/nav_drawer_background_neon"/>
</android.support.v4.widget.DrawerLayout>
