<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- The main content view -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/mono_dark_background">

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/current_playlist"
            android:footerDividersEnabled="true"
            android:headerDividersEnabled="true"
            android:focusable="false"
            android:layout_weight="1"
            android:dividerHeight="@dimen/common_playlist_divider_height"
            android:fastScrollEnabled="true"
            android:smoothScrollbar="true"
            android:paddingTop="@dimen/common_playlist_padding_top"
            android:paddingLeft="@dimen/common_playlist_padding_left_right"
            android:paddingRight="@dimen/common_playlist_padding_left_right"
            android:divider="@color/mono_dark_playlist_divider"
            android:drawSelectorOnTop="false" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/common_playlist_buttons_row_h"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:id="@+id/playlist_controls"
            android:gravity="center"
            android:background="@color/mono_dark_background">

            <ImageButton
                android:layout_width="@dimen/common_playlist_buttons_w_h"
                android:layout_height="@dimen/common_playlist_buttons_w_h"
                android:id="@+id/playlist_layout_prev"
                android:src="@drawable/mono_dark_prev_states"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:layout_marginRight="@dimen/common_playlist_buttons_separator"
                android:layout_marginEnd="@dimen/null_size"/>

            <ImageButton
                android:layout_width="@dimen/common_playlist_buttons_w_h"
                android:layout_height="@dimen/common_playlist_buttons_w_h"
                android:id="@+id/playlist_layout_shuffle"
                android:longClickable="false"
                android:src="@drawable/mono_dark_shuffle_states"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:layout_marginLeft="@dimen/common_playlist_buttons_separator"
                android:layout_marginRight="@dimen/common_playlist_buttons_separator" />

            <ImageButton
                android:layout_width="@dimen/common_playlist_buttons_w_h"
                android:layout_height="@dimen/common_playlist_buttons_w_h"
                android:id="@+id/playlist_layout_play"
                android:src="@drawable/mono_dark_play_states"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:layout_marginLeft="@dimen/common_playlist_buttons_separator"
                android:layout_marginRight="@dimen/common_playlist_buttons_separator" />

            <ImageButton
                android:layout_width="@dimen/common_playlist_buttons_w_h"
                android:layout_height="@dimen/common_playlist_buttons_w_h"
                android:id="@+id/playlist_layout_skip"
                android:src="@drawable/mono_dark_next_states"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:layout_marginLeft="@dimen/common_playlist_buttons_separator"
                android:layout_marginStart="@dimen/null_size"
                android:cropToPadding="false" />

        </LinearLayout>
        <TextView
            android:id="@android:id/empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_playlist" />

    </LinearLayout>

    <!-- The navigation drawer -->
    <ListView
        android:id="@+id/left_drawer1"
        android:layout_width="@dimen/common_large_port_nav_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@color/neon_nav_drawer_divider"
        android:dividerHeight="@dimen/common_large_port_nav_drawer_divider_height"
        android:background="@color/mono_dark_nav_drawer_background"/>
</android.support.v4.widget.DrawerLayout>
