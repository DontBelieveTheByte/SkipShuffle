<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="@dimen/common_single_playlist_item_w_h"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/transparent"
    android:clickable="false">

    <ImageView
        android:layout_width="@dimen/common_single_playlist_item_w_h"
        android:layout_height="@dimen/common_single_playlist_item_w_h"
        android:id="@+id/track_image"
        android:layout_marginRight="@dimen/common_single_playlist_item_image_margin_right"
        android:layout_marginEnd="@dimen/null_size"
        android:scaleType="fitXY"
        android:padding="@dimen/common_single_playlist_item_image_padding"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_single_playlist_item_track_title_height"
        android:text="@string/meta_data_unknown_current_song_title"
        android:singleLine="true"
        android:id="@+id/track_title"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/track_image"
        android:layout_toEndOf="@+id/track_image"
        android:ellipsize="end"
        android:lines="1"
        android:textSize="@dimen/common_single_playlist_item_track_title_text_size"
        android:textColor="@color/mono_dark_playlist_item_track_title"
        android:paddingTop="@dimen/common_single_playlist_item_track_title_padding_top"
        android:paddingRight="@dimen/common_single_playlist_item_track_title_padding_right"
        android:paddingEnd="@dimen/null_size"
        android:paddingLeft="@dimen/null_size"
        android:paddingStart="@dimen/null_size"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_single_playlist_item_track_artist_height"
        android:text="@string/meta_data_unknown_artist"
        android:id="@+id/track_artist"
        android:layout_toEndOf="@+id/track_image"
        android:layout_below="@+id/track_title"
        android:layout_toRightOf="@+id/track_image"
        android:textSize="@dimen/common_single_playlist_item_track_artist_text_size"
        android:ellipsize="end"
        android:lines="1"
        android:textStyle="italic"
        android:textColor="@color/mono_dark_playlist_item_artist_title"
        android:paddingRight="@dimen/common_single_playlist_item_track_artist_padding_right"
        android:paddingEnd="@dimen/null_size"
        android:paddingLeft="@dimen/null_size"
        android:paddingStart="@dimen/null_size"
        android:paddingBottom="@dimen/common_single_playlist_item_track_artist_padding_bottom" />
</RelativeLayout>