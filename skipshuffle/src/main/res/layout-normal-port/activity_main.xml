<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/background_neon"
        android:paddingTop="@dimen/normal_land_outmost_layout_padding_top"
        android:paddingRight="@dimen/normal_land_outmost_layout_padding_right"
        android:paddingBottom="@dimen/normal_land_outmost_layout_padding_bottom"
        android:paddingLeft="@dimen/normal_land_outmost_layout_padding_left"
        android:id="@+id/bottom">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:columnCount="3"
            android:rowCount="3"
            android:layout_centerInParent="true"
            android:id="@+id/gridLayout">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:layout_columnSpan="3">

                <ImageButton
                    android:layout_width="@dimen/normal_port_play_w_h"
                    android:layout_height="@dimen/normal_port_play_w_h"
                    android:id="@+id/playBtn"
                    android:src="@drawable/play_states_neon"
                    android:scaleType="fitXY"
                    android:background="@android:color/transparent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/normal_port_play_margin_left" />

                <ImageButton
                    android:layout_width="@dimen/normal_port_skip_w_h"
                    android:layout_height="@dimen/normal_port_skip_w_h"
                    android:id="@+id/skipBtn"
                    android:src="@drawable/skip_states_neon"
                    android:scaleType="fitXY"
                    android:background="@android:color/transparent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/normal_port_skip_margin_right" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_height="wrap_content"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1">

                <TextView
                    android:layout_width="@dimen/normal_port_song_label_width"
                    android:textSize="@dimen/normal_port_song_label_txt"
                    android:layout_height="wrap_content"
                    android:text="@string/meta_data_unknown_current_song_title"
                    android:id="@+id/song_label"
                    android:textColor="@color/song_label_neon"
                    android:typeface="monospace"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:singleLine="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:ellipsize="marquee"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_column="0"
                android:layout_row="2"
                android:layout_height="wrap_content"
                android:layout_columnSpan="3"
                android:layout_rowSpan="1">

                <ImageButton
                    android:layout_width="@dimen/normal_port_shuffle_w_h"
                    android:layout_height="@dimen/normal_port_shuffle_w_h"
                    android:id="@+id/shuffleBtn"
                    android:src="@drawable/shuffle_states_neon"
                    android:scaleType="fitXY"
                    android:background="@android:color/transparent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="@dimen/normal_port_shuffle_margin_top"
                    android:layout_marginLeft="@dimen/normal_port_shuffle_margin_left"/>

                <ImageButton
                    android:layout_width="@dimen/normal_port_playlist_w_h"
                    android:layout_height="@dimen/normal_port_playlist_w_h"
                    android:id="@+id/playlistBtn"
                    android:src="@drawable/playlist_states_neon"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <ImageButton
                    android:layout_width="@dimen/normal_port_prev_w_h"
                    android:layout_height="@dimen/normal_port_prev_w_h"
                    android:id="@+id/prevBtn"
                    android:src="@drawable/prev_states_neon"
                    android:scaleType="fitXY"
                    android:background="@android:color/transparent"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/normal_port_prev_margin_top"
                    android:layout_marginRight="@dimen/normal_port_prev_margin_right"/>
            </RelativeLayout>

        </GridLayout>

    </RelativeLayout>
    <ListView
        android:id="@+id/left_drawer1"
        android:layout_width="@dimen/normal_port_nav_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:paddingTop="@dimen/navdrawer_padding_top"
        android:divider="@color/list_divider_neon"
        android:dividerHeight="@dimen/normal_port_nav_drawer_divider_height"
        android:background="@color/nav_drawer_background_neon"/>

</android.support.v4.widget.DrawerLayout>