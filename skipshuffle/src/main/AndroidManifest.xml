<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dontbelievethebyte.skipshuffle" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.BROADCAST_STICKY" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_skipshuffle_launcher"
        android:label="@string/label_app_name"
        android:theme="@android:style/Theme.Black.NoTitleBar">
        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/CustomActionBarTheme"
            android:launchMode="singleTop"
            android:label="@string/label_app_name" >
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.FilePickerActivity"
            android:theme="@style/CustomActionBarTheme"
            android:label="@string/label_file_picker"
            android:parentActivityName="com.dontbelievethebyte.skipshuffle.activities.MainActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.dontbelievethebyte.skipshuffle.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.PlaylistActivity"
            android:theme="@style/CustomActionBarTheme"
            android:label="@string/label_playlist"
            android:parentActivityName="com.dontbelievethebyte.skipshuffle.activities.MainActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.dontbelievethebyte.skipshuffle.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.PlaylistSelectorActivity"
            android:theme="@style/CustomActionBarTheme"
            android:label="@string/label_playlist_selector" >
            android:parentActivityName="com.dontbelievethebyte.skipshuffle.activities.MainActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.dontbelievethebyte.skipshuffle.activities.MainActivity" />
        </activity>

        <service android:name=".services.SkipShuffleMediaPlayer" />
        <service android:name=".services.MediaScannerService" />
    </application>

</manifest>
